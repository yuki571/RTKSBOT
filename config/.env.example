# 環境変数設定ファイル (.env.example)
# このファイルを .env にコピーして設定を行ってください

# ===== Discord Bot 設定 =====
# Discord Developer Portal で作成したボットのトークン
DISCORD_TOKEN=your_discord_bot_token_here

# ボットのアプリケーション ID
APPLICATION_ID=your_application_id_here

# ===== データベース設定 =====
# データベースファイルのパス（相対パスまたは絶対パス）
DB_PATH=bot_database.db

# データベースのバックアップを作成するかどうか (true/false)
DB_BACKUP_ENABLED=true

# ===== Keep-alive 設定 =====
# Replit などのクラウドサービス用の Keep-alive サーバーのポート
KEEP_ALIVE_PORT=8080

# Keep-alive サーバーを有効にするかどうか (true/false)
KEEP_ALIVE_ENABLED=true

# ===== ログ設定 =====
# ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ログファイルを出力するかどうか (true/false)
LOG_TO_FILE=true

# ログファイルの保存ディレクトリ
LOG_DIR=logs

# ===== VOICEVOX 設定 =====
# VOICEVOX サーバーのURL（音声読み上げ機能用）
VOICEVOX_URL=http://localhost:50021

# VOICEVOX 機能を有効にするかどうか (true/false)
VOICEVOX_ENABLED=true

# ===== 経済システム設定 =====
# 経済システムを有効にするかどうか (true/false)
ECONOMY_ENABLED=true

# デイリー報酬の金額
DAILY_REWARD=1000

# マイニング報酬の範囲 (最小,最大)
MINING_REWARD_MIN=50
MINING_REWARD_MAX=500

# ===== 音楽機能設定 =====
# 音楽機能を有効にするかどうか (true/false)
MUSIC_ENABLED=true

# デフォルト音量 (0-100)
DEFAULT_VOLUME=50

# ===== 開発・デバッグ設定 =====
# デバッグモード (true/false)
DEBUG_MODE=false

# テストサーバーのギルド ID（スラッシュコマンドのテスト用）
TEST_GUILD_ID=your_test_guild_id_here